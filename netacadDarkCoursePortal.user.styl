/* ==UserStyle==
@name           Darkmode Netacad Portal & Course - Feb 2024
@namespace      github.com/openstyles/stylus
@version        1.0.0
@description    Dark mode for Netacad Portal & Courses
@author         Luna Skye
==/UserStyle== */

@-moz-document domain("netacad.com") {
    :root {
        --col-bg-dark: hsl(0,0%,8%);
        --col-bg-grey: hsl(0,0%,12%);
        --col-bg-mid: hsl(0,0%,24%);
        
        --col-bg-sat: #091C37;
        
        --col-bg-submitted: #1e2e1e;
        --col-bg-notgraded: #302525;
        --col-bg-latesubmission: #371313;
        
        --col-text-submitted: #cfefcf;
        --col-text-notgraded: #EFEFEF;
        --col-text-latesubmission: #EFCFCF;
        
        --col-text-primary: white;
        --col-text-secondary: hsl(0,0%,60%);
        --col-text-link: #0aa896;
    }
    
    
    .cui.template--cdc header,
    .cui.template--cdc main,
    .cui.template--cdc main#main-content.sidebarpresent,
    #region-main,
    .cui .activity { background: var(--col-bg-dark); }
    
    .cui.template--cdc { background:var(--col-bg-sat); }
    
    #learning-content .generate-transcript,
    .ci-tile,
    .featured-news-list a.featured-news-item,
    .resources-item .resources-list a,
    .cui .form-group .form-group__text.select select,
    .cui .form-group .form-group__text input,
    .cui.template--cdc footer,
    .cui .card,
    .custom-select,
    html body.cui header.global-header .navbar-nav .dropdown-menu,
    html body.cui header.global-header .header-toolbar .login-div .dropdown-content,
    header.header--regular .dropdown-menu { background: var(--col-bg-grey); }
    
    .resources-item .resources-list a:hover { background: var(--col-bg-mid); }
    
    .cui .divider,
    .cui .form-group .form-group__text.select select,
    .cui .form-group .form-group__text input,
    .course-content ul.topics .sectionname,
    .cui .card,
    .generaltable th,
    .generaltable td, 
    .custom-select { border-color: var(--col-bg-mid); }
    
    .cui a:not(.btn):focus,
    .cui a:not(.btn):hover,
    .cui .link:focus,
    .cui .link:hover,
    .featured-news-list a.featured-news-item .news-title { color: var(--col-text-link); }
    
    .cui .activity, .generaltable,
    html body.cui header.global-header .header-toolbar .login-div .login-dropdown,
    header.header--regular .header-panel .login-div .dropdown-toggle::after { color: var(--col-text-secondary); }
    
    body.cui,
    .cui .generaltable tbody tr:hover,
    header.header--regular .navbar-nav > li > a,
    header.header--regular a,
    header.header--regular .dropdown-toggle::after { color: var(--col-text-primary) !important; }
    
    h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 { color: var(--col-text-sat); }
    
    .path-mod-assign td.submissionstatussubmitted,
    .path-mod-assign div.submissionstatussubmitted,
    .path-mod-assign a:link.submissionstatussubmitted {
        background: var(--col-bg-submitted); color: var(--col-text-submitted);
    }
    .path-mod-assign td.submissionnotgraded,
    .path-mod-assign div.submissionnotgraded {
        background: var(--col-bg-notgraded); color: var(--col-text-notgraded);
    }
    .path-mod-assign td.latesubmission,
    .path-mod-assign a:link.latesubmission,
    .path-mod-assign div.latesubmission {
        background: var(--col-bg-latesubmission); color: var(--col-text-latesubmission);
    }
}
